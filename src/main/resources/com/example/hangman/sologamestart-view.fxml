<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="680.0" minWidth="735.0" prefHeight="680.0" prefWidth="735.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hangman.SoloGameStartController">
   <children>
      <VBox alignment="CENTER_RIGHT" minHeight="680.0" minWidth="735.0" prefHeight="680.0" prefWidth="735.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/hangmanLogoSolo.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="15.0" top="20.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="96.0" prefWidth="735.0" />
            <HBox alignment="CENTER" prefHeight="249.0" prefWidth="735.0">
               <children>
                  <ImageView fx:id="normalModeImage" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#beginNormalGame" onMouseEntered="#showNormalDescription" onMouseExited="#hideDescription" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <image>
                        <Image url="@img/normalModeButton.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="10.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="speedrunModeImage" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#beginSpeedrunGame" onMouseEntered="#showSpeedrunDescription" onMouseExited="#hideDescription" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <image>
                        <Image url="@img/speedrunModeButton.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" top="15.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="114.0" prefWidth="735.0">
               <children>
                  <Label fx:id="modeDescriptionLabel">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children></HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="55.0" prefWidth="735.0">
               <children>
                  <ImageView fx:id="homeImage" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#onHomeImageClick" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@img/homeButton.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="logoutImage" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#onLogoutImageClick" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@img/signOutButton.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="exitImage" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#onExitImageClick" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                     <image>
                        <Image url="@img/turnOffButton.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="7.0" right="7.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
